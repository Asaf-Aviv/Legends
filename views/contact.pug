include partials/head.pug
body
    include partials/nav.pug

    .container
        .form-wrapper
        
            legend.text-center Contact Me

            form.form-horizontal.text-center.justify-content-center(action="/contact/form", method="GET")

                .form-group
                    label(for="name") Name
                    input.form-control(type="text", name="name", placeholder="Name", required)

                .form-group
                    label(for="email") Email
                    input.form-control(type="email", name="email", placeholder="Email", required)

                .form-group
                    label(for="message") Message
                    textarea.form-control(name="message", placeholder="Message", rows="6", required)

                button.btn.btn-default(type="submit") Send

    include partials/footer.pug
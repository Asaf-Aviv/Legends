include partials/head
body
    include partials/nav
    //- include partials/sidenav
    .container
        .row.align-items-center.justify-content-center.vh-100
            .col-lg-6.col-md-7
                form#search-form(method="GET", action="/summoner")
                    .input-group
                        .input-group-prepend
                            select#region-select(name="region")
                                option(value="NA1") NA
                                option(value="EUW1") EUW
                                option(value="EUN1") EUNE
                                option(value="KR") KOREA
                                option(value="JP1") JAPAN
                                option(value="LA1") LAN
                                option(value="BR1") BRAZIL
                                option(value="LA2") LAS
                                option(value="TR1") TURKEY
                                option(value="OC1") OCE
                                option(value="RU") RUSSIA
                        input.form-control(type="text" name="userName" maxlength="16" placeholder="Summoner Name" required)
                        .input-group-append
                            button.btn
                                i.fas.fa-search
    include partials/footer
    include partials/scroll_top
    include partials/scripts
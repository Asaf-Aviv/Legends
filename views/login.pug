include partials/head.pug
body(style=`background-image: url(/assets/league/img/bgs/face.jpg);`)
    include partials/nav.pug

    .container
        .form-wrapper
        
            legend.text-center Log In

            form#login-form.form-horizontal.text-center.justify-content-center(action="/login", method="POST")

                .form-group
                    label(for="email") Email
                    input#login-email.form-control(type="email", name="email", placeholder="Email" required)

                .form-group
                    label(for="password") Password
                    input#login-password.form-control(type="password", name="password", placeholder="Password" required)

                button.btn.btn-success(type="submit") Log In

        include partials/footer.pug
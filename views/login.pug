include partials/head.pug
body(style=`background-image: url(/assets/league/img/bgs/face.jpg);`)
    include partials/nav.pug

    .container
        .form-wrapper.mt-5
            form#login-form.form-group(action="/login" method="POST" autocomplete="off")
                legend.text-center Log In
                .md-form
                    i.fa.fa-envelope.prefix
                    input.form-control.pb-3(type="text" id="login-email" name="email" required)
                    label(for="login-email") Email

                .md-form.mb-4
                    i.fa.fa-lock.prefix
                    input.form-control.pb-3(type="password" id="login-password" name="password" required)
                    label(for="login-password") Password
                .text-center
                    button.btn.btn-outline-success
                        i.fa.fa-sign-in.fa-5x.mr-2
                        | Log In

        include partials/footer.pug
include partials/head
body
    include partials/nav
    include partials/sidenav
    .container.position-relative
        .form-container.col-xl-3.col-lg-4.col-md-5.col-10.p-0.mx-auto
            .form-wrapper
                .form-header Log In
                form#login-form(action="/login" method="POST")
                    .form-group-wrapper
                        .form-icon
                            i.fa.fa-at
                            input(type="text" id="login-email" name="email" placeholder="Email" required)
                        .form-icon
                            i.fas.fa-key
                            input(type="password" id="login-password" name="password" placeholder="Password" required)
                        a.forgot(href="/forgot") Forgot Password ?
                    button Log in
                    .form-footer
                        span Don't have an account ?  
                            a.logins(href="/register") register
                            | &nbsp;here
    include partials/footer
    include partials/scroll_top
    include partials/scripts
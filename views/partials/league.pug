- const tier1 = [];
- const tier2 = [];
- const tier3 = [];
- const tier4 = [];
- const tier5 = [];

each player in league.entries
    case player.rank
        when 'I'
            - tier1.push(player)
        when 'II'
            - tier2.push(player)
        when 'III'
            - tier3.push(player)
        when 'IV'
            - tier4.push(player)
        when 'V'
            - tier5.push(player)

- tier1.sort((a, b) => b.leaguePoints - a.leaguePoints)
- tier2.sort((a, b) => b.leaguePoints - a.leaguePoints)
- tier3.sort((a, b) => b.leaguePoints - a.leaguePoints)
- tier4.sort((a, b) => b.leaguePoints - a.leaguePoints)
- tier5.sort((a, b) => b.leaguePoints - a.leaguePoints)

#leagues.row.justify-content-center
    .col-6
        ul.nav.nav-pills
            li.nav-item: a.nav-link(class=summonerRank.rank == 'I' ? 'active' : '', data-toggle="pill" href="#tier-1") I
            li.nav-item: a.nav-link(class=summonerRank.rank == 'II' ? 'active' : '', data-toggle="pill" href="#tier-2") II
            li.nav-item: a.nav-link(class=summonerRank.rank == 'III' ? 'active' : '', data-toggle="pill" href="#tier-3") II
            li.nav-item: a.nav-link(class=summonerRank.rank == 'IV' ? 'active' : '', data-toggle="pill" href="#tier-4") IV
            li.nav-item: a.nav-link(class=summonerRank.rank == 'V' ? 'active' : '', data-toggle="pill" href="#tier-5") V

        .tab-content
            #tier-1.tab-pane(class=summonerRank.rank == 'I' ? 'active' : '')
                table.table.text-center
                    thead
                        tr
                            td Rank
                            td Summoner
                            td LP
                            td Emblems
                            td Win Ratio
                            td Series
                    tbody
                        - for (let i = 0, x = tier1.length; i < x; i++) {
                            tr.text-center
                                td(style="width: 50px")= i + 1
                                td: a(href=`/summoner?region=${region}&userName=${tier1[i].playerOrTeamName}`): span= tier1[i].playerOrTeamName
                                td= tier1[i].leaguePoints
                                td.hot-streak
                                    i.fa.fa-fire
                                    i.fa.fa-angle-double-up
                                    i.fa.fa-ribbon
                                td
                                    span.lg-wins(style='width:'+((tier1[i].wins / (tier1[i].wins + tier1[i].losses)) * 100).toFixed(0) + '%')= tier1[i].wins
                                    span.lg-losses(style='width:'+((tier1[i].losses / (tier1[i].losses + tier1[i].wins)) * 100).toFixed(0) + '%')= tier1[i].losses
                                    span.lg-winrate=((tier1[i].wins / (tier1[i].wins + tier1[i].losses)) * 100).toFixed(0) + '%'
                                if tier1[i].miniSeries
                                    td
                                        each game in tier1[i].miniSeries.progress
                                            if game == 'W'
                                                i.fa.fa-check-circle(style="color: green; font-size: 18px; padding: 1px")
                                            else if game == 'L'
                                                i.fa.fa-times-circle(style="color: red; font-size: 18px; padding: 1px")
                                            else
                                                i.fa.fa-question(style="color: #fff; font-size: 18px; padding: 1px")
                                else
                                    td

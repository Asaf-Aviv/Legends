include partials/head
    
body
    include partials/nav
    include partials/sidenav
    .container
        #profile-wrapper.pt-5
            .row
                .col-lg-3.col-md-4.col-sm-6.mb-5.mb-md-0
                    include partials/profile_nav
                    if currentUser.friendRequests.length
                        #prof-friend-requests.main-bg.silent-shadow.p-3.mt-3
                            h6 Friend Requests
                            each request in currentUser.friendRequests
                                include partials/friend-request
                                    
                #profile-content.col-md-8.offset-lg-1.col-sm-12
                    .profile-post-wrapper.mb-4
                        form(method="POST", action="/post")
                            .form-group.silent-shadow
                                textarea.form-control.rounded-0.mb-3(name="postBody" data-autoresize placeholder="Post something nice ..." rows="5" required)
                            button.btn.bold Post
                    #posts
                        each post in currentUser.posts
                            include partials/post
    include partials/footer
    include partials/scroll_top
    include partials/scripts
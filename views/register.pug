include partials/head.pug
body
    include partials/nav.pug

    .container
        .form-wrapper
            form#register-form.text-center(action="/register", method="POST")
                legend Register
                .form-group
                    label(for="username") Username
                    input.form-control(type="text", name="username", placeholder="Username" required)

                .form-group
                    label(for="email") Email
                    input.form-control(type="email", name="email", placeholder="Email" required)

                .form-group
                    label(for="password") Password
                    input.form-control(type="password", name="password", placeholder="Password" required)

                .form-group
                    label(for="password-confirm") Confirm Password
                    input.form-control(type="password", name="confirmPassword", placeholder="Password" required)

                button.btn.btn-success(type="submit") Become a Legend

    include partials/footer.pug